<div class="row">

<% @products.in_groups_of(3, false).each do |group| %>
  <div class='row'>

    <% group.each do |product| %>
    
    <div class='col-md-4'>

        <div class="thumbnail">

               <div class="caption">

        <h3 ><%= product.title %> </h3>
         <p ><%= product.description %> </p>
         <p >Euro: <%= product.price %> </p>
       

<%= link_to product_path(product) do %>
<%= image_tag product.image.url(:thumb), class: "img-responsive" %>
<% end %>




         

                </div> <!-- end caption-->
           
    </div><!-- end thumbail-->

  </div> <!-- end col-md-4 -->
      
    <% end %>

</div> <!-- end row -->
<% end %>





























