<table class="table">
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>Prezzo</th>


      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td>Euro  <%= product.price %></td>
        <td><%= image_tag product.image.url(:thumb), class: "style_image" %></td>
        <td><%= link_to 'Mostra Dettagli', product,class:"btn btn-primary"%></td>
        <td><%= link_to 'Modifica Prodotto', edit_product_path(product),class:"btn btn-warning" %></td>
        <td><%= link_to 'Elimina Prodotto', product, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Inserisci Nuovo Prodotto', new_product_path,class:"btn btn-info" %>
