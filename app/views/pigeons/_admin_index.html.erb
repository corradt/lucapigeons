<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pigeons.each do |pigeon| %>
      <tr>
        <td><%= pigeon.name %></td>
        <td><%= pigeon.matr %></td>
        <td><%= pigeon.year %> </td>
        <td><%= image_tag pigeon.image.url(:thumb), class: "style_image" %></td>
        <td><%= link_to 'Show', pigeon %></td>
        <td><%= link_to 'Edit', edit_pigeon_path(pigeon) %></td>
        <td><%= link_to 'Destroy', pigeon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

